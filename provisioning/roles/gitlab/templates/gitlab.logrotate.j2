# GitLab logrotate settings
# based on: http://stackoverflow.com/a/4883967

{{ gitlab_path }}/log/*.log {
    weekly
    missingok
    rotate 52
    compress
    delaycompress
    notifempty
    copytruncate
}

{{ gitlab_shell_path }}/gitlab-shell.log {
    weekly
    missingok
    rotate 52
    compress
    delaycompress
    notifempty
    copytruncate
}
